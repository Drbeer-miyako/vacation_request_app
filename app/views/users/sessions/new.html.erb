<%# <%= render "shared/header"%>
<%= form_with model: @user, url: user_session_path, class: 'session-main', local: true do |f| %>
  <div class='form-wrap'>  
  <%= render "devise/shared/error_messages", resource: resource %>

  
    <div class="header">
      <div class="form-header-text">
        <h1>ログイン画面</h1>
      </div>
    </div>

    <div class="form-group">
    
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
      </div>
        


      <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
          <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
          <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
      </div>

      <div class='register-btn'>
        <%= f.submit "ログイン" ,class:"register-red-btn" %>
      </div>


    </div>
  </div>
<% end %>

      <div class='password-btn'>
          <label class="form-text">パスワードを忘れた場合</label>
          <%= button_to "パスワードを忘れた場合", new_user_password_path, method: :get  %>
      </div>
     


