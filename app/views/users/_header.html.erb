<div class="second-header">
  <div class="left-header">
    <div class="header-title">
      <% if current_page?(controller: 'users', action: 'index') %>
        <h2>従業員一覧</h2>
      <% elsif current_page?(controller: 'users', action: 'holiday') %>
        <h2>有給申請一覧</h2>
      <% elsif current_page?(controller: 'users', action: 'week_holiday_change') %>
        <h2>週休変更申請一覧</h2>
      <% else %>
        <h2>詳細ページ</h2>
      <% end %>
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">

      <%= link_to "有給申請一覧", users_holiday_path %>
      <% unless current_page?(controller: 'users', action: 'week_holiday_change') %>
        <%= link_to "週休休暇一覧", users_week_holiday_change_path %>        
      <% end %>  
      
     <% if current_page?(controller: 'users', action: 'index') %>
        <%= link_to "新規グループ作成", new_group_path %>
     <% else %>
          <%= link_to "社員一覧", users_path %>
     <% end %>
    </div>
  </div>
</div>