
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= resource_name %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class='form-wrap'>

    <div class="header">
      <div class="form-header-text">
        <h1>基本情報の編集画面</h1>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
        <%= f.text_area :user_name, autofocus: true, class:"input-default", id:"user_name", maxlength:"20" %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, class:"input-default", id:"email", placeholder:"会社用のメールアドレス", autofocus: true %>
      </div>
      

      <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      </div>
      

      <div class='form-text-wrap'>
        <label class="form-text">役職</label>
        <%= f.select :position, ['一般社員', 'リーダー', '主任', '部長', '役員', 'システム管理者'], {include_blank: '---'} %>
      </div>
    
      <div class='register-btn'>
        <%= f.submit "Update" %>
      </div>
    </div>
  </div>



  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>




<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "アカウントの削除", registration_path(resource_name), data: { confirm: "本当にこのアカウントを削除しますか?<br />" }, method: :delete %></p>

<%= link_to "Back", :back %>
