<div class='form-wrap'>
  <%# <%= render "users/shared/error_messages", resource: @user %>
    <div class="header">
      <div class="form-header-text">
        <h1>基本情報の編集画面</h1>
      </div>
    </div>
  <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
  <%# <%= form_with scope: :@user, url:user_path(@user.id), method: :patch, local: true do |f| %> %>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">名前</label>
        <%= f.text_area :user_name, autofocus: true, class:"input-default", id:"user_name", maxlength:"20" %>
      </div>

      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <%= f.email_field :email, autofocus: true, class:"input-default", id:"email", placeholder:"会社用のメールアドレス", autofocus: true %>
      </div>
      

      <%# <div class='form-text-wrap'>
        <label class="form-text">パスワード</label>
        <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
      <%# </div> %>

          

      <div class='form-text-wrap'>
        <label class="form-text">役職</label>
        <%= f.select :position, ['一般社員', 'リーダー', '主任', '部長', '役員', 'システム管理者'], {include_blank: '---'} %>
      </div>
    
      <div class='register-btn'>
        <%= f.submit "アップデート" %>
      </div>
    </div>
  <% end %>
    <div class="form-group">
      <div class='register-btn'>
        <%= button_to "アカウントの削除", user_path(@user.id), data: { confirm: "本当にこのアカウントを削除しますか?" }, method: :delete %>
      </div>
    </div>

  
</div>













