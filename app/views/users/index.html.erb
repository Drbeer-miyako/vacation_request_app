<%= render partial: "header", locals: { user: @user } %>


  
  <% @users.each do |user| %>
    <div class='flex-employee-list'>
        <div class="users-user-name">
          <li> <%= user.user_name %>さん</li>
        </div>

      <% if RemainingHoliday.exists?(user_id: user.id) %> 
            <div class="users-contents"><li><%= link_to "詳細ページ", user_path(user.id) %></li></div>
      <% else %>
            <div class="users-contents"><li><%= link_to "有給休暇の付与", new_user_remaining_holiday_path(user_id: user.id) %></div>
      <% end %>   
    </div>
  <% end %>
  
