<%= render partial: "header", locals: { user: @user } %>

<ul class='employee-list'>
  
  <% @users.each do |user| %>
    <div class='employee-list-set'>
        <div class="total_holiday">
          <li> <%= user.user_name %>さん</li>
        </div>

      <% if RemainingHoliday.exists?(user_id: user.id) %> 
            <%= link_to "詳細ページ", user_path(user.id) %>
      <% else %>
            <%= link_to "有給休暇の付与", user_remaining_holiday_index_path(user_id: user.id) %>
      <% end %>   
    </div>
  <% end %>
  
</ul>