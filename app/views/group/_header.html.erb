<div class="holiday-header">
     <div class="left-header">
          <div class="header-title">
               <% if current_page?(controller: 'group', action: 'index') %>
                    <h2>トップページ</h2>
               <% elsif current_page?(controller: 'group', action: 'new') %>
                    <h2>グループ作成ページ</h2>
               <% elsif current_page?(controller: 'group', action: 'show') %>
                    <h2>グループの申請一覧</h2>
               <% elsif current_page?(controller: 'group', action: 'edit') %>
                    <h2>グループ情報の編集</h2>
               <% end %>
          </div>
     </div>
     <div class="right-header">
          <div class="header-button">
          <%= link_to "マイページ", holidays_path %>
               <% if current_page?(controller: 'group', action: 'index') %>

               <% else %>
                    <%= link_to "トップページ", root_path %>
               <% end %>
               <% unless current_user.position == "一般社員"  %>
                    <%= link_to "社員名簿一覧", users_path %>
               <% end %>
               <% if current_user.position == "システム管理者"  %>
                    
                    <% unless current_page?(controller: 'group', action: 'new') %>
                         <%= link_to "新規グループ作成", new_group_path %>
                    <% end %>
               <% end %>
          </div>
     </div>
</div>